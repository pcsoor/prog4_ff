<Window x:Class="TetrisMario.Control.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisMario.Control"
        mc:Ignorable="d"
        Title="TetrisMario" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/background.jpg" Stretch="UniformToFill" />
        </Grid.Background>
        <Button Content="New Game" HorizontalAlignment="Center" Height="57" Margin="0,250,0,0" VerticalAlignment="Top" Width="257" Click="StartGame_Click" FontFamily="Consolas" FontSize="20"/>
        <Button Content="Load Game" HorizontalAlignment="Center" Height="57" Margin="0,390,0,0" VerticalAlignment="Top" Width="257" FontFamily="Consolas" Click="Load_Click"  FontSize="20"/>
        <Button Content="Highscores" HorizontalAlignment="Center" Height="57" Margin="0,320,0,0" VerticalAlignment="Top" Width="257" Click="Highscores_Click" FontFamily="Consolas"  FontSize="20"/>
        <Button Content="Exit" HorizontalAlignment="Center" Height="57" Margin="0,460,0,0" VerticalAlignment="Top" Width="257" Click="Exit_Click" FontFamily="Consolas"  FontSize="20"/>
    </Grid>
</Window>
